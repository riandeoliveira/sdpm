import Head from "next/head";

interface HeaderAreaProps {
  title?: string;
  description?: string;
}

const HeadArea = ({ title, description }: HeaderAreaProps): JSX.Element => (
  <Head>
    <title>{title || "<%= props.project_name %>"}</title>
    <meta name="description" content={description || "Generated by sdpm cli"} />
    <meta name="keywords" content="React, Next.js, TypeScript" />
    <meta name="author" content="<%= props.author %>" />
    <link rel="icon" href="/favicon.ico" />
  </Head>
);
export default HeadArea;
